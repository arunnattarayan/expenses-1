{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "yarn: build",
            "type": "shell",
            "command": "yarn build",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "yarn: build (production)",
            "type": "shell",
            "command": "yarn build --prod",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "yarn: start",
            "type": "shell",
            "command": "yarn start",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build"
        },
        {
            "label": "yarn: install",
            "type": "shell",
            "command": "yarn install",
            "group": "build"
        },
        {
            "label": "yarn: lint",
            "type": "shell",
            "command": "yarn lint",
            "group": "build",
            "problemMatcher": [
                "$tslint5"
            ]
        }
    ]
}